<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WaveStyle"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/main_tab_height"
    android:layout_weight="1.0"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="55dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_icon_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:src="@drawable/tab_main_home_selector"/>

            <TextView
                android:id="@+id/tab_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="首页"
                android:textColor="@color/tab_main_text_color"
                android:textSize="@dimen/font_size_12"/>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>